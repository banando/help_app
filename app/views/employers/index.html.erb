<p id="notice"><%= notice %></p>

<h1>Employers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Location</th>
      <th>Bio</th>
      <th>Company name</th>
      <th>Industy</th>
      <th>Company website</th>
      <th>City</th>
      <th>Social media links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.first_name %></td>
        <td><%= employer.last_name %></td>
        <td><%= employer.email %></td>
        <td><%= employer.location %></td>
        <td><%= employer.bio %></td>
        <td><%= employer.company_name %></td>
        <td><%= employer.industy %></td>
        <td><%= employer.company_website %></td>
        <td><%= employer.city %></td>
        <td><%= employer.social_media_links %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

